			<add> 20 </add>
			<add>
				<copy src="darn_fontsize_dummy" trait="width"/>
				<add> 10 </add>
				<onlyif>
					<copy src="audio_master_slider" trait="user8" />
					<and>
						<copy src="darnui_settings" trait="_aqtypos" />
						<eq> &right; </eq>
					</and>
				</onlyif>
			</add>
		</user0>
		<user1> 375 </user1> <!-- DarN height 500 -->
	
	
