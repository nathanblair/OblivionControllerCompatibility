<!-- TextEditMenu.xml -->
 <!-- DarN Version 1.0 -->
<menu name="TextEditMenu">
	<class> &TextEditMenu; </class>
	<stackingtype> &no_click_past; </stackingtype>
	<alpha>	0 </alpha>
	<locus> &true; </locus>
	<explorefade> 0.25 </explorefade>
	
	<!-- DarNified Settings -->
	
	<!-- Message text -->
	<_mtfont> 3 </_mtfont>
	<_mtalpha> 200 </_mtalpha>
	<_mtred> 0 </_mtred>
	<_mtblue> 0 </_mtblue>
	<_mtgreen> 0 </_mtgreen>
	
	<!-- Input text -->
	<_itfont> 3 </_itfont>
	<_italpha> 255 </_italpha>
	<_itred> 117 </_itred>
	<_itgreen> 33 </_itgreen>
	<_itblue> 59 </_itblue>

	<!-- END DarNified Settings -->
	
	<user0></user0>	<!-- Prompt string -->
	
	<rect name="textedit_background">
<include src="darn\generic_background50.xml"/>
		<locus>&true;</locus>
		<x>
			<copy src="screen()" trait="width" />
			<sub src="me()" trait="width" />
			<div> 2 </div>
		</x>
		<y>
			<copy src="screen()" trait="height" />
			<sub src="me()" trait="height" />
			<div> 2 </div>
		</y>
		<depth> 3 </depth>
		<user0> 350 </user0>	<!-- DarN 720 width -->
		<user1> 160 </user1>	<!-- DarN 180 height -->
		
		<text name="textedit_prompt">
			<string> <copy src="TextEditMenu" trait="user0"/> </string>
			<font> <copy src="TextEditMenu" trait="_mtfont" /> </font> <!-- DarN add -->
			<alpha> <copy src="TextEditMenu" trait="_mtalpha" /> </alpha> <!-- DarN 255 -->
			<red> <copy src="TextEditMenu" trait="_mtred" /> </red> <!-- DarN 117 -->
			<green> <copy src="TextEditMenu" trait="_mtgreen" /> </green> <!-- DarN 59 -->
			<blue> <copy src="TextEditMenu" trait="_mtblue" /> </blue> <!-- DarN 33 -->
			<depth> 3 </depth>
			<x>
				<copy src="parent()" trait="width"/>
				<sub src="me()" trait="width"/>
				<div> 2 </div>
			</x>
			<y> 8 </y>
		</text>
		
		<text name="textedit_text">
			<id> 1 </id>
			<font> <copy src="TextEditMenu" trait="_itfont" /> </font> <!-- DarN add -->
			<alpha> <copy src="TextEditMenu" trait="_italpha" /> </alpha> <!-- DarN 255 -->
			<red> <copy src="TextEditMenu" trait="_itred" /> </red> <!-- DarN 117 -->
			<green> <copy src="TextEditMenu" trait="_itgreen" /> </green> <!-- DarN 59 -->
			<blue> <copy src="TextEditMenu" trait="_itblue" /> </blue> <!-- DarN 33 -->
			<depth> 3 </depth>
			<string></string>
			<justify> &center; </justify> <!-- DarN add -->
			<wrapwidth> <copy src="parent()" trait="width"/> <sub> 30 </sub> </wrapwidth> <!-- DarN 250 -->
			<x>
				<copy src="parent()" trait="width"/>
				<!-- <sub> 280 </sub> --> <!-- DarN 185 -->
				<div> 2 </div>
			</x>
			<y>
				<copy src="textedit_prompt" trait="y"/>
				<add src="textedit_prompt" trait="height"/>
				<add> 16 </add>
			</y>
		</text>

		<image name="textedit_button_back">
<include src="darn\button_short.xml"/>
			<id> 3 </id>
			<depth> 3 </depth>
			<target> &true; </target>
			<x>
				<copy src="textedit_button_ok" trait="x"/>
				<sub src="me()" trait="width"/>
				<sub> 16 </sub>
			</x>
			<y>
				<copy src="textedit_button_ok" trait="y"/>
			</y>
			<user0> <copy src="strings()" trait="_back"/> </user0>
			
			<xdefault> &false; </xdefault>
			<xright> <ref src="textedit_button_ok" trait="mouseover"/> </xright>
		</image>

		<image name="textedit_button_ok">
<include src="darn\button_short.xml"/>
			<id> 2 </id>
			<depth> 3 </depth>
			<target> &true; </target>
			<x>
				<copy src="parent()" trait="width"/>
				<sub src="me()" trait="width"/>
				<sub> 15 </sub>
			</x>
			<y>
				<copy src="parent()" trait="height"/>
				<sub src="me()" trait="height"/>
				<sub> 15 </sub>
			</y>
			<user0> <copy src="strings()" trait="_ok"/> </user0>
			
			<xdefault> &true; </xdefault>
			<xleft> <ref src="textedit_button_back" trait="mouseover"/> </xleft>
		</image>

	</rect> <!-- end generic background -->
	
</menu>
