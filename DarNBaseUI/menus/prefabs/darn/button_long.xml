<!-- DarN Version 1.0 -->
<!-- button_long.xml -->
<!-- image name="button_long" -->
	<zoom> 75 </zoom><!-- DarN add -->
	<visible>
		<copy src="me()" trait="user3"/>
	</visible>
	<alpha>
		<copy> 1 </copy>
		<sub src="me()" trait="mouseover"/>
		<mul> 256 </mul>
		<sub>
			<copy> 256 </copy>
			<onlyifnot src="me()" trait="user1"/>
		</sub>
		<max> 0 </max>
		<add>
			<copy> 128 </copy>
			<onlyifnot src="me()" trait="user1"/>
		</add>
		<sub>
			<copy> 256 </copy>
			<onlyif>
				<copy src="me()" trait="user20"/>
				<gt> 1 </gt>
			</onlyif>
		</sub>
		<min> 256 </min>
		<max> 0 </max>
	</alpha>
	<target> <copy src="me()" trait="user1"/> </target>
	<filename>
		<copy src="me()" trait="user20"/>
		<min> 2 </min>
		<copy src="me()" trait="_filename_"/>
	</filename>
	<width> 133 </width> <!-- DarN 177 -->
	<height> 33 </height>  <!-- DarN 44 -->
	<depth> 1 </depth>
	<locus> &true; </locus>
	<user0>  </user0>				<!-- text of the button -->
	<user1> &true; </user1>			<!-- enabled - true=enabled, false=disabled -->
	<user2> 3 </user2>				<!-- font to use for button text --> <!-- DarN 1 -->
	<user3> &true; </user3>			<!-- is visible -->
	<user20> 1 </user20>			<!-- look of the button, 1=button, 2-7=Xbox button image+label -->

	<!-- RGB values for text (button enabled, xbox only) -->
	<user21>117</user21>
	<user22>59</user22>
	<user23>33</user23>

	<_filename_1> Menus\Shared\shared_button_long_off.dds </_filename_1>
	<_filename_2> Menus\Shared\shared_empty.dds </_filename_2>
	<_is_xbox>
		<copy src="me()" trait="user20"/>
		<gt> 1 </gt>
	</_is_xbox>
	
	<image name="button_long_on">
		<zoom> 75 </zoom><!-- DarN add -->
		<visible>
			<copy src="parent()" trait="mouseover"/>
			<eq> 1 </eq>
			<and src="parent()" trait="user1"/>
			<or src="parent()" trait="_is_xbox"/>
		</visible>
		<alpha>
			<copy> 128 </copy>
			<add>
				<copy> 127 </copy>
				<onlyif>
					<not>&xbox;</not>
					<or src="parent()" trait="user1"/>
				</onlyif>
			</add>
		</alpha>
		<filename>
			<copy> 1 </copy>
			<onlyif> &xbox; </onlyif>
			<add> 1 </add>
			<copy src="me()" trait="_filename_"/>
		</filename>
		<cropx>
			<copy src="parent()" trait="user20"/>
			<sub> &xbuttona; </sub>
			<add> 2 </add>
			<onlyif> &xbox; </onlyif>
			<max> 1 </max>
			<copy src="me()" trait="_cropx_"/>
		</cropx>
		<width>
			<copy> 132 </copy> <!-- DarN 176 -->
			<onlyifnot src="parent()" trait="_is_xbox"/>
			<add>
				<copy> 64 </copy>
				<onlyif src="parent()" trait="_is_xbox"/>
			</add>
		</width>
		<height>
			<copy> 38 </copy> <!-- DarN 51 -->
			<onlyifnot src="parent()" trait="_is_xbox"/>
			<add>
				<copy> 64 </copy>
				<onlyif src="parent()" trait="_is_xbox"/>
			</add>
		</height>
		<x> 0 </x>
		<y>
			<copy src="sibling(cont_button_exit_text)" trait="y"/>
			<add>
				<copy src="sibling(cont_button_exit_text)" trait="height"/>
				<sub src="me()" trait="height"/>
				<div>2</div>
			</add>
			<sub>	<!-- adjustment for floating font...doesn't look right for some reason -->
				<copy>6</copy>
				<onlyif>
					<copy src="parent()" trait="user2"/>
					<eq>2</eq>
				</onlyif>
			</sub>
			<onlyif src="parent()" trait="_is_xbox"/>
		</y>
		<depth> 2 </depth>
		<_filename_1> Menus\Shared\shared_button_long_on.dds </_filename_1>
		<_filename_2> Menus\Shared\all_xbox_buttons.dds </_filename_2>
		<_cropx_1> 0 </_cropx_1><!-- DarN 0 -->
		<_cropx_2> 96 </_cropx_2><!-- DarN 128 -->
		<_cropx_3> 144 </_cropx_3><!-- DarN 192 -->
		<_cropx_4> 0 </_cropx_4><!-- DarN 0 -->
		<_cropx_5> 48 </_cropx_5><!-- DarN 64 -->
		<_cropx_6> 240 </_cropx_6><!-- DarN 320 -->
		<_cropx_7> 192 </_cropx_7><!-- DarN 256 -->
		<_cropx_8> 288 </_cropx_8><!-- DarN 384 -->
		<_cropx_9> 336 </_cropx_9><!-- DarN 448 -->
	</image>
	
	<text name="cont_button_exit_text">
		<string> <copy src="parent()" trait="user0"/> </string>
		<justify>
			<copy> &center; </copy>
			<onlynotif src="parent()" trait="_is_xbox"/>
			<add>
				<copy> &left; </copy>
				<onlyif src="parent()" trait="_is_xbox"/>
			</add>
		</justify>
		<font> <copy src="parent()" trait="user2"/> </font>
		<red>
			<copy> 117 </copy>
			<onlyif src="parent()" trait="user1"/>			<!-- enabled -->
			<add>
				<copy> 128 </copy>
				<onlyifnot src="parent()" trait="user1"/>	<!-- not enabled -->
			</add>
			<onlyifnot>&xbox;</onlyifnot>
			<add>
				<copy src="parent()" trait="user21"/>		<!-- xbox override -->
				<onlyif> &xbox; </onlyif>
			</add>
			<min> 255 </min>
		</red>
		<green>
			<copy> 59 </copy>
			<onlyif src="parent()" trait="user1"/>			<!-- enabled -->
			<add>
				<copy> 128 </copy>
				<onlyifnot src="parent()" trait="user1"/>	<!-- not enabled -->
			</add>
			<onlyifnot>&xbox;</onlyifnot>
			<add>
				<copy src="parent()" trait="user22"/>		<!-- xbox override -->
				<onlyif> &xbox; </onlyif>
			</add>
			<min> 255 </min>
		</green>
		<blue>
			<copy> 33 </copy>
			<onlyif src="parent()" trait="user1"/>			<!-- enabled -->
			<add>
				<copy> 128 </copy>
				<onlyifnot src="parent()" trait="user1"/>	<!-- not enabled -->
			</add>
			<onlyifnot>&xbox;</onlyifnot>
			<add>
				<copy src="parent()" trait="user23"/>		<!-- xbox override -->
				<onlyif> &xbox; </onlyif>
			</add>
			<min> 255 </min>
		</blue>
		<alpha>
			<copy> 255 </copy>
			<onlyif src="parent()" trait="user1"/>
			<add>
				<copy> 128 </copy>
				<onlyifnot src="parent()" trait="user1"/>
			</add>
		</alpha>
		<depth> 3 </depth>
		<x>
			<copy src="parent()" trait="width"/>
			<div> 2 </div>
			<sub> 4 </sub> <!-- shadow makes right edge slightly thicker, adjust -->
			<onlyifnot src="parent()" trait="_is_xbox"/>
			<add>
				<copy src="sibling(button_long_on)" trait="x"/>
				<add src="sibling(button_long_on)" trait="width"/>
				<onlyif src="parent()" trait="_is_xbox"/>
			</add>
		</x>
		<y> 2 </y> <!-- DarN 0 -->
	</text>
<!-- /image -->