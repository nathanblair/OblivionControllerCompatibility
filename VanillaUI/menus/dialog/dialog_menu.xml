	<depth> 1 </depth>
	<x> 0 </x>
	<y> 0 </y>
	<locus> &true; </locus>
	<user0> 1 </user0>
	<user1> 2 </user1>
	<user2> 0.75 </user2>
	<user3> 0.50 </user3>
