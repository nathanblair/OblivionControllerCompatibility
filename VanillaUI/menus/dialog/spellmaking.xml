				<xup> <ref src="spell_name_background" trait="mouseover" /> </xup>
				<xdown> <ref src="spell_button_create" trait="mouseover" /> </xdown>
				<xscroll> <ref src="spell_added_effects_scroll_bar" trait="user5" /> </xscroll>
				
