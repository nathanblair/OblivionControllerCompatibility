				<max src="child(magic_hint_left_stick)" trait="width"/>
			</sub>
		</x>
		<y>
			<copy src="screen()" trait="height"/>
			<sub src="screen()" trait="cropy"/>
			<sub src="screen()" trait="cropy"/>
			<sub src="child(magic_hint_left_stick)" trait="y"/>
			<sub src="child(magic_hint_left_stick)" trait="height"/>
			<add> 15 </add>
		</y>
		<depth> 1 </depth>
		<locus> &true; </locus>
	
