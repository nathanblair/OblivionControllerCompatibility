				<sub> 1 </sub> <!-- turn true(2)/false(1) into true(1)/false(0) -->
				<mul src="hudinfo_quality_icon" trait="height" />
				<add>
					<copy src="me()" trait="height" />
					<onlyif src="me()" trait="visible" />
				</add>
			</sub>
		</y>
	</text>
	
	
	
