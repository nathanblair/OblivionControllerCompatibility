			</sub>
			<sub> 720 </sub>	<!-- effective width of hudemainmenu -->
		</wrapwidth>
		<justify> &right; </justify>
		<x>
			<copy src="screen()" trait="width" />
			<sub src="screen()" trait="cropx" />
			<sub src="screen()" trait="cropx" />
		</x>
		<y>
			<copy src="hudinfo_dest" trait="y" />
			<sub src="me()" trait="height" />
			<add> -12 </add>
			<add> 20 </add>
		</y>
		<user15> -46 </user15>
